{
  "name": "todo",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "docker compose up --build --watch",
    "stop": "docker compose stop",
    "teardown": "docker compose down",
    "test": "npm run test:jest && npm run test:cy",
    "lint": "eslint .",
    "danger": "danger ci",
    "local:build": "next build",
    "local:dev": "next dev",
    "prisma:introspect": "prisma db pull",
    "prisma:migrate": "echo \"Migration name: \" && read NAME && prisma migrate dev --create-only --name ${NAME}",
    "prisma:apply": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset --skip-seed",
    "prisma:seed": "prisma db seed",
    "test:jest": "jest",
    "test:cy": "CYPRESS_EXIT=0; npm run start:test -- --detach && npm run testdb:reset; cypress run || CYPRESS_EXIT=$?; npm run stop:test && exit $CYPRESS_EXIT",
    "start:test": "cross-env DB_PASSWORD=password DB_DATABASE=tasktix_test docker compose -f compose.yaml -f compose.test.yaml up --build",
    "stop:test": "docker compose -f compose.yaml -f compose.test.yaml down --volumes",
    "testdb:reset": "docker compose exec test npm run prisma:reset -- --force",
    "testdb:seed": "docker compose exec test npm run prisma:seed",
    "cy:open": "cypress open"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@heroui/react": "^2.8.5",
    "@heroui/theme": "^2.4.23",
    "@prisma/client": "^6.19.0",
    "@react-aria/focus": "^3.21.3",
    "@react-aria/interactions": "^3.26.0",
    "@react-aria/label": "^3.7.23",
    "@react-aria/numberfield": "^3.12.3",
    "@react-aria/selection": "^3.27.0",
    "@react-aria/textfield": "^3.18.3",
    "@tailwindcss/postcss": "^4.1.16",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-bootstrap-icons": "^1.11.6",
    "react-dom": "19.2.3",
    "sharp": "^0.34.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "cross-env": "^10.0.0",
    "cypress": "^15.0.0",
    "danger": "^13.0.4",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "framer-motion": "^12.23.26",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.16",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.49.0"
  }
}
