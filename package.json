{
  "name": "todo",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "docker compose up --build --watch",
    "stop": "docker compose stop",
    "teardown": "docker compose down",
    "test": "npm run test:jest && npm run test:cy",
    "lint": "eslint .",
    "danger": "danger ci",
    "local:build": "next build",
    "local:dev": "next dev",
    "prisma:introspect": "prisma db pull",
    "prisma:migrate": "echo \"Migration name: \" && read NAME && prisma migrate dev --create-only --name ${NAME}",
    "prisma:apply": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset --skip-seed",
    "prisma:seed": "prisma db seed",
    "test:jest": "jest",
    "test:cy": "CYPRESS_EXIT=0; npm run start:test -- --detach && npm run testdb:reset; cypress run || CYPRESS_EXIT=$?; npm run stop:test && exit $CYPRESS_EXIT",
    "start:test": "cross-env DB_PASSWORD=password DB_DATABASE=tasktix_test docker compose -f compose.yaml -f compose.test.yaml up --build",
    "stop:test": "docker compose -f compose.yaml -f compose.test.yaml down --volumes",
    "testdb:reset": "docker compose exec test npm run prisma:reset -- --force",
    "testdb:seed": "docker compose exec test npm run prisma:seed",
    "cy:open": "cypress open"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.4.0",
    "@heroui/react": "2.8.5",
    "@heroui/theme": "^2.4.23",
    "@prisma/client": "^6.19.0",
    "@tailwindcss/postcss": "^4.1.16",
    "framer-motion": "^11.18.2",
    "next": "^14.2.30",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-bootstrap-icons": "^1.11.6",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "cross-env": "^10.0.0",
    "cypress": "^15.1.0",
    "danger": "^13.0.4",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.30",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-headers": "^1.3.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unused-imports": "4.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "3.3.3",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.16",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
